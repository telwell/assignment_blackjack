<h1>
  Time for some blackjack!
</h1>
<form class="reset_button" action="/new_game">
	<input type="submit" value="New Game">
</form>

<div class="dealer">
	<p>Dealer showing: 
		<%= @dealer.cards_string %>
	</p>
</div>

<div class="player">
	<p>
		Player has: <%= @player.cards_string %>
	</p>
	<p class="bold">
		Total of: <%= @player.hand_value %>
	</p>

	<% if player_bust == true %>
		<h2 class="red">Sorry, you busted. You lose!</h2>
	<% else %>
		<form class="player_hit" action="/hit">
			<input type="submit" value="Hit">
		</form>
		<form class="player_stay" action="/stay">
			<input type="submit" value="Stay">
		</form>
	<% end %>
</div>